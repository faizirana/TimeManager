# ==============================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.dev and fill with your development values
# Never commit .env.dev to version control

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_DB=mydb
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypass
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ==============================================
# JWT SECRETS (Development - Use strong secrets in production!)
# ==============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ACCESS_TOKEN_SECRET=your_development_access_token_secret_here_min_32_characters
REFRESH_TOKEN_SECRET=your_development_refresh_token_secret_here_min_32_characters

# ==============================================
# NODE ENVIRONMENT
# ==============================================
NODE_ENV=development

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# API URL for frontend (use /api for nginx proxy or http://localhost:3001 for direct)
NEXT_PUBLIC_API_URL=/api

# ==============================================
# PGADMIN (Development only)
# ==============================================
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
