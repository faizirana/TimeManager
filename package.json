{
  "name": "project-tls-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "cd frontend && npm run lint --if-present && cd ../backend && npm run lint --if-present",
    "lint:fix": "cd frontend && npm run lint:fix --if-present && cd ../backend && npm run lint:fix --if-present",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test:frontend": "cd frontend && npm test --if-present",
    "test:backend": "cd backend && npm test --if-present"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  }
}
